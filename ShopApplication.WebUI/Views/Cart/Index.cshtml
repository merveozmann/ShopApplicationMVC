@model  CartModel
@{
    ViewData["Title"] = "Index";
}

<h1>Sepetim</h1>


<div class="row mt-5">

    <div class="col-md-8">
        <div class="text-left">
            <h4>Sepet Bilgisi</h4>
        </div>
        @if (Model.CartItems.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Fiyat</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>

                            <td>
                                <img src="~/img/@item.ImageUrl" width="80" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("c")</td>
                            <td>@item.Quantity</td>
                            <td>@((item.Quantity * item.Price).ToString("c"))</td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times fa-fw"></i>
                                    </button>
                                </form>

                            </td>

                        </tr>
                    }


                </tbody>

            </table>
        }
        else
        {
            <div class="alert alert-warning"> Sepetinizde ürün bulunmuyor</div>
        }


    </div>

    <div class="col-md-4">
        <div class="text-left">
            <h4>Sipariş Bilgi</h4>
        </div>
        <table class="table">
            <tbody>
                <tr>
                    <th>Sepet Toplam</th>
                    <td>@Model.TotalPrice().ToString("c")</td>
                </tr>
                <tr>
                    <td>Kargo</td>
                    <td>Bedava</td>
                </tr>
                <tr>
                    <td>Genel Toplam</td>
                    <td>@Model.TotalPrice().ToString("c")</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center">

            <a href="/" class="btn btn-info">
                <i class="fa fa-arrow-circle-left fa-fw"></i>Alışverişe Devam Et
            </a>
            <a asp-controller="Cart" asp-action="Checkout" class="btn btn-info">
                <i class="fa fa-arrow-circle-right fa-fw"></i>Sipariş Onay
            </a>
        </div>
    </div>

</div>

