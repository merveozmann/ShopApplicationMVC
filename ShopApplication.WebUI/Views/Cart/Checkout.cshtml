@model  OrderModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Sipariş Oluşturma</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayı</h4>
        <form asp-controller="Cart" asp-action="Checkout" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control" />
                </div>

            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address"></label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Phone"></label>
                    <input asp-for="@Model.Phone" class="form-control" />
                </div>


                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                </div>

            </div>

            <hr class="mb-4" />
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="save-info" />
                <label class="custom-control-label" for="save-info">Adres bilgisini kayıt et</label>

            </div>
            <hr class="mb-4" />
            <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" id="credit" name="paymentMethod" />
                <label class="custom-control-label" for="credit">Kredi Kartı</label>
            </div>
            <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" id="paypal" name="paymentMethod" />
                <label class="custom-control-label" for="eft">EFT</label>
            </div>

            <h4 class="mb-3">Ödeme</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CartName" >Kart üzerindeki isim</label>
                    <input asp-for="@Model.CartName" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CartNumber "> Kart numarası</label>
                    <input asp-for="@Model.CartNumber" class="form-control" />
                </div>

            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationMonth"></label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationYear"></label>
                    <input asp-for="@Model.ExpirationYear" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Cvv"></label>
                    <input asp-for="@Model.Cvv" class="form-control" />
                </div>

            </div>

           <hr class="mb-4" />

            <button type="submit" class="btn btn-info btn-lg btn-block">Siparişi Onayla</button>

        </form>

</div>



    <div class="col-md-4 mb-4">
        <h4>
            <span class="text-muted">Sipariş Bilgi</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0">@item.Name
                        <small>@item.Quantity</small>
                        </h6>
                    </div>
                    <span class="text-muted">@item.Price TL</span>
                </li>
            }



            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam(TL)</span>
                <strong>@Model.CartModel.TotalPrice() TL</strong>
            </li>
        </ul>


    </div>

</div>

