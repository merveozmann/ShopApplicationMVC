@model ProductListModel
@{
    ViewData["Title"] = "Index";
}

<h1>ürün Listesi</h1>
<hr />

@if(Model.Products.Count > 0)
{
    <table class="table table-bordered">
    <thead>
        <tr>
            <td style="width:30px">ID</td>
            <td style="width:100px">Resim</td>
            <td>Ürün Adı</td>
            <td style="width:12px">Fiyat</td>
            <td style="width:150px"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <img src="~/img/@item.ImageUrl" width="80" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-info btn-sm mr-2" href="/admin/products/@item.Id">Düzenle</a>

                    <form action="/admin/deleteproduct" method="post" style="display:inline;">

                        <input type="hidden" name="productId" value="@item.Id" />
                        <button class="btn btn-danger btn-sm " type="submit">Sil</button>

                    </form>

                    
                </td>
            </tr>
        }

    </tbody>

</table>


}
else
{ 
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}



