@model CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}

<h1>Kategori Listesi</h1>

<hr />

@if (Model.Categories.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td style="width:30px">ID</td>
                <td style="width:100px">Kategori Adı</td>
                <td style="width:150px"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-info btn-sm mr-2" href="/admin/editcategory/@item.Id">Düzenle</a>

                        <form action="/admin/deletecategory" method="post" style="display:inline;">

                            <input type="hidden" name="categoryId" value="@item.Id" />
                            <button class="btn btn-danger btn-sm " type="submit">Sil</button>

                        </form>


                    </td>
                </tr>
            }

        </tbody>

    </table>


}
else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}
