@model  ProductDetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-md-3">
        <img src="~/img/@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid" />
    </div>
    <div class="col-md-3">
        <h1 class="mb-3">
            @Model.Product.Name
        </h1>
        <hr />
        @foreach (var category in Model.Categories)
        {
            <a href="#" class="btn btn-link p-0 mb-3 text-info">@category.Name</a>
        }

    <div class="mb-3">
        <h4 class="text-primary mb-3 text-info">
            @Model.Product.Price TL
        </h4>

      
            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                <input type="hidden" name="productId" value="@Model.Product.Id" />
                <div class="input-group mb-3">
                    <input type="number" name="quantity" value="1"class="form-control" min="1" step="1" style="width:100px" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-info">
                            <i class="fas fa-cart-plus"></i>Sepete Ekle
                        </button>
                    </div>
                </div>
            </form>
    </div>

    </div>
</div>
<div class="row">
    <div class="colm-md-12">
        <p class="p-3">
            @Html.Raw(Model.Product.Description)
        </p>
    </div>
</div>
